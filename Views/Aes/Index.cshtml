@{
    ViewData["Title"] = "AES Şifreleme";
}

<h2 class="text-center mt-4 fw-bold">AES Şifreleme ve Şifre Çözme</h2>

<div class="container mt-4">

    <!-- 🔐 Metin Şifreleme -->
    <div class="card custom-card p-4 mb-4 fade-in">
        <h4 class="mb-3">🔒 Metin Şifreleme</h4>

        <form asp-action="Encrypt" method="post">
            <div class="mb-3">
                <label class="fw-semibold">Metin</label>
                <textarea name="plainText" class="form-control" rows="3">@ViewBag.Input</textarea>
            </div>
            <div class="mb-3">
                <label class="fw-semibold">Şifre (Anahtar)</label>
                <input type="text" name="password" class="form-control" value="@ViewBag.Password" />
            </div>
            <button type="submit" class="btn btn-primary w-100 btn-lg">Şifrele</button>
        </form>

        @if (ViewBag.EncryptError != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.EncryptError</div>
        }

        @if (ViewBag.Encrypted != null)
        {
            <div class="alert alert-success mt-3">
                <strong>Şifrelenmiş Metin:</strong>
                <div class="mt-2">@ViewBag.Encrypted</div>
            </div>
        }
    </div>

    <!-- 🔓 Şifre Çözme -->
    <div class="card custom-card p-4 mb-4 fade-in">
        <h4 class="mb-3">🔓 Şifre Çözme</h4>

        <form asp-action="Decrypt" method="post">
            <div class="mb-3">
                <label class="fw-semibold">Şifreli Metin</label>
                <textarea name="encryptedText" class="form-control" rows="3">@ViewBag.Encrypted</textarea>
            </div>
            <div class="mb-3">
                <label class="fw-semibold">Şifre (Anahtar)</label>
                <input type="text" name="password" class="form-control" value="@ViewBag.Password" />
            </div>
            <button type="submit" class="btn btn-secondary w-100 btn-lg">Çöz</button>
        </form>

        @if (ViewBag.DecryptError != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.DecryptError</div>
        }

        @if (ViewBag.Decrypted != null)
        {
            <div class="alert alert-info mt-3">
                <strong>Çözülmüş Metin:</strong>
                <div class="mt-2">@ViewBag.Decrypted</div>
            </div>
        }
    </div>

</div>
